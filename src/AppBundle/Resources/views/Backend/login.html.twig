{% extends '@App/Backend/base_login.html.twig' %}

{% block body %}
<div class="auth-wrapper">
	<div class="auth-content">
		<div class="auth-bg">
			<span class="r"></span>
			<span class="r s"></span>
			<span class="r s"></span>
			<span class="r"></span>
		</div>

		
		<div class="card" style="opacity:0.9; border-radius:50px">
			<div class="card-body text-center">
				<div class="">
					<img class="logo-login" src="{{ asset('images/prlm_logo.png') }}" style='width:150px;'>
				</div>
				{#<h3 class="mb-4">Login</h3>#}
				<br><br>
		{% for flashMessage in app.session.flashbag.get('login_error') %}
			<div class="alert alert-danger" role="alert">{{ flashMessage | raw }}</div>
        {% endfor %}
        {% if error %}
            <div>{{ error.messageKey|trans({}, 'security') }}</div>
        {% endif %}

		{{ form_start(
			form,
			{
				'attr': {
					'id': 'loginForm'
				}
			}
		) }}

				<form action="{{ path('backend_login') }}" method="post" id="loginForm">
					<div class="input-group mb-3">
						<input type="email" class="form-control required email" placeholder="Email" name="_username">
					</div>
					<div class="input-group mb-4">
						<input type="password" class="form-control required" placeholder="Password" name="_password">
					</div>
					<button type="submit" class="btn btn-primary shadow-2 mb-4">Login</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block extra_scripts %}


<script>
  $(function () {

    $('#loginForm').validate({
    	errorPlacement: function(error, element) {}
    });
    
  });
</script>
{% endblock %}